#!/usr/bin/env ruby

require 'smartcloud'

command = ARGV.shift
if command == 'new'
	raise "Please specify a machine name" if ARGV.empty?
	machine = Smartcloud::Machine.new
	machine.create ARGV
elsif command == 'start'
	machine = Smartcloud::Machine.new
	machine.start
elsif command == 'stop'
	machine = Smartcloud::Machine.new
	machine.stop
elsif command == 'grids'
	machine = Smartcloud::Machine.new
	machine.grids ARGV
elsif command == 'ssh'
	machine = Smartcloud::Machine.new
	machine.ssh
else
	puts "Specify a command to execute."
end
