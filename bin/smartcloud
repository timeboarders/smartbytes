#!/usr/bin/env ruby

require 'smartcloud'

command = ARGV.shift
if command == 'new'
	raise "Please specify a machine name" unless ARGV[1]
	machine = Smartcloud::Machine.new
	machine.create ARGV[1]
elsif command == 'start'
	machine = Smartcloud::Machine.new
	machine.start
elsif command == 'stop'
	machine = Smartcloud::Machine.new
	machine.stop
elsif command == 'grids'
	machine = Smartcloud::Machine.new
	machine.run ARGV
else
	puts "Specify a command to execute."
end
