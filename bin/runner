#!/usr/bin/env ruby

require 'smartcloud'

if ARGV[0] == 'prereceive'
	raise "Please provide oldrev, newrev and refname" unless ARGV[1] && ARGV[2] && ARGV[3]
	Smartcloud::Grids::Runner.prereceive(ARGV[1], ARGV[2], ARGV[3])
elsif ARGV[0] == 'apps'
	raise "Please provide username" unless ARGV[2]
	raise "Please provide appname" unless ARGV[3]
	if ARGV[1] == 'create'
		Smartcloud::Grids::Runner.create_app(ARGV[2], ARGV[3])
	elsif ARGV[1] == 'start'
		Smartcloud::Grids::Runner.start_app(ARGV[2], ARGV[3])
	elsif ARGV[1] == 'stop'
		Smartcloud::Grids::Runner.stop_app(ARGV[2], ARGV[3])
	elsif ARGV[1] == 'destroy'
		Smartcloud::Grids::Runner.destroy_app(ARGV[2], ARGV[3])
	end
end
